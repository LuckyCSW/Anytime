<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.naver.anytime.mybatis.mapper.Semester_detailMapper">

   <insert id = "insert" parameterType ="semester_detail">
   
     insert into semester_detail
     values
     (semester_detail_seq.NEXTVAL, #{semester_id}, #{subject}, #{credit}, #{grade}, #{major})
   
   </insert>


    <update id = "update" parameterType ="semester_detail">
    update semester_detail 
    set subject = #{subject},
        credit = #{credit},
        grade = #{grade},
        major = #{major}
    where semester_detail_id =#{semester_detail_id}     
</update>




     <select id="getSemesterDetailsBySemesterId" parameterType="int" resultType="semester_detail">
        SELECT * FROM semester_detail WHERE semester_id = #{semester_id}
    </select>
    




</mapper>